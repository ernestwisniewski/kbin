{% extends 'base.html.twig' %}

{% block title %}Edytuj link | {{ parent() }}{% endblock %}

{% block body %}
    <div class="kbin-entry-edit-page">
        <div class="kbin-entry-create-link mt-lg-4">
            <div class="kbin-magazine-background"></div>

            <h1 class="font-weight-bold">Edytuj link</h1>
            <p class="kbin-magazine-create-lead lead mb-5">
                Podziel się ciekawym linkiem lub fotografią.
            </p>

            {% include 'entry/_form_link.html.twig' %}
            {% include 'entry/_form_delete.html.twig' %}
        </div>
    </div>
{% endblock %}

{% block sidebar %}
    {{ parent() }}

    {% if magazine is defined and magazine %}
        {% include 'magazine/_sidebar.html.twig' %}
    {% endif %}
{% endblock %}
