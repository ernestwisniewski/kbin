{{ form_start(form) }}
<div class="mb-3">
    {{ form_label(form.username, 'Nazwa użytkownika') }}
    <div class="input-group input-group-lg">
        {{ form_widget(form.username) }}
    </div>
</div>

<div class="mb-3">
    {{ form_label(form.email, 'Email') }}
    <div class="input-group input-group-lg">
        {{ form_widget(form.email) }}
    </div>
</div>

<div class="mb-3">
    {{ form_label(form.plainPassword.first, 'Hasło') }}
    <div class="input-group input-group-lg">
        {{ form_widget(form.plainPassword.first) }}
    </div>
</div>

<div class="mb-3">
    {{ form_label(form.plainPassword.second, 'Powtórz hasło') }}
    <div class="input-group input-group-lg">
        {{ form_widget(form.plainPassword.second) }}
    </div>
</div>

{% if form.avatar is defined %}
    <div class="mb-3">
        {{ form_label(form.avatar, 'Avatar') }}
        <div class="input-group input-group-lg">
            {{ form_widget(form.avatar, {'attr':{ 'class': 'form-control' }}) }}
        </div>
    </div>
{% endif %}

<div class="mb-3">
    {{ form_label(form.agreeTerms, 'Zgoda na warunki i regulamin') }}
    <div class="input-group input-group-lg">
        {{ form_widget(form.agreeTerms, {name: 'Zgoda na warunki i regulamin'}) }}
    </div>
</div>

<div class="mb-12 text-end">
    {{ form_row(form.submit, { 'label': 'Gotowe' }) }}
</div>
{{ form_end(form) }}
