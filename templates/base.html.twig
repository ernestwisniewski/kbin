<!doctype html>
<html lang="pl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>{% block title %}karab.in{% endblock %}</title>

    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body data-controller="kbin" class="{{ app.user and app.user.theme is same as 'dark' ? 'kbin-dark' : '' }}">
<div data-controller="scroll-progress" class="bg-primary scroll-progress"></div>
<div id="kbin" {% if magazine is defined and magazine %}data-controller="notify-magazine" data-notify-magazine-name-value="{{ magazine.name }}"{% endif %}>
    {% include '_layout/_topbar.html.twig' %}
    {% include '_layout/_navbar.html.twig' %}
    <section class="kbin-container container pt-3 pb-5">
        <div class="row">
            <div class="col-lg-9">
                <main class="kbin-main">
                    {% block body %}{% endblock %}
                </main>
            </div>
            <div class="col-lg-3">
                <aside class="kbin-sidebar">
                    {% block sidebar %}
                        {% include '_layout/_sidebar.html.twig' %}
                    {% endblock %}
                </aside>
            </div>
        </div>
    </section>
    {% include '_layout/_footer.html.twig' %}

    <div aria-live="polite" aria-atomic="true" class="position-relative">
        <div class="kbin-toast-container toast-container position-fixed bottom-0 end-0 p-3">

        </div>
    </div>
</div>

{% block javascripts %}
    {% if kbin_js_enabled %}
        {{ encore_entry_script_tags('app') }}
    {% endif %}
{% endblock %}

</body>
</html>
